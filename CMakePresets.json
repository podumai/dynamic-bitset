{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 27,
    "patch": 0
  },
  "configurePresets": [
    {
      "name" : "debug",
      "hidden": false,
      "displayName": "[Debug] Configuration preset (Default build generator)",
      "description": "Debug configuration preset using default build generator",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "release",
      "hidden": false,
      "displayName": "[Release] Configuration preset (Default build generator)",
      "description": "Release configuration preset using default build generator",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "base-build",
      "hidden": true,
      "displayName": "[Base] Build configuration (Abstract)",
      "description": "Base build configuration (Abstract)",
      "verbose": false
    },
    {
      "name": "debug",
      "hidden": false,
      "displayName": "[Debug] Build configuration (Default build generator)",
      "description": "Release build configuration using default build generator",
      "configurePreset": "debug",
      "inherits": [
        "base-build"
      ]
    },
    {
      "name": "release",
      "hidden": false,
      "displayName": "[Release] Build configuration (Default build generator)",
      "description": "Release build configuration using default build generator",
      "configurePreset": "release",
      "inherits": [
        "base-build"
      ]
    }
  ],
  "workflowPresets": [
    {
      "name": "debug",
      "displayName": "[Debug] Debug project build workflow",
      "description": "Debug project build workflow using default build generator",
      "steps": [
        {
          "type": "configure",
          "name": "debug"
        },
        {
          "type": "build",
          "name": "debug"
        }
      ]
    },
    {
      "name": "release",
      "displayName": "[Release] Release project build workflow",
      "description": "Release project build workflow using default build generator",
      "steps": [
        {
          "type": "configure",
          "name": "release"
        },
        {
          "type": "build",
          "name": "release"
        }
      ]
    }
  ]
}
